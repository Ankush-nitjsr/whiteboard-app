{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/react",
      "config": {
        "outputDirectory": "client/build"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "client/build/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "server/$1"
    }
  ]
}
